<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="ChooseHeadImageDialog" parent="@android:style/Theme.Dialog">
		<!-- 背景透明 -->
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowContentOverlay">@null</item>
		<!-- 浮于Activity之上 -->
		<item name="android:windowIsFloating">true</item>
		<!-- 边框 -->
		<item name="android:windowFrame">@null</item>
		<!-- Dialog以外的区域模糊效果 -->
		<item name="android:backgroundDimEnabled">true</item>
		<!-- 无标题 -->
		<item name="android:windowNoTitle">true</item>
		<!-- 半透明 -->
		<item name="android:windowIsTranslucent">true</item>
		<!-- Dialog进入及退出动画 -->
		<item name="android:windowAnimationStyle">@style/ChooseHeadImageDialogAnimation</item>
	</style>
	<!-- ActionSheet进出动画 -->
	<style name="ChooseHeadImageDialogAnimation" parent="@android:style/Animation.Dialog">
		<item name="android:windowEnterAnimation">@anim/choose_head_dialog_in</item>
		<item name="android:windowExitAnimation">@anim/choose_head_dialog_out</item>
	</style>

	<style name="AccessPermissionDialog" parent="@android:style/Theme.Dialog">
		<!-- 背景透明 -->
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowContentOverlay">@null</item>
		<!-- 浮于Activity之上 -->
		<item name="android:windowIsFloating">true</item>

		<item name="android:windowCloseOnTouchOutside">false</item>
		<!-- 边框 -->
		<item name="android:windowFrame">@null</item>
		<!-- Dialog以外的区域模糊效果 -->
		<item name="android:backgroundDimEnabled">true</item>
		<!-- 无标题 -->
		<item name="android:windowNoTitle">true</item>
		<!-- 半透明 -->
		<item name="android:windowIsTranslucent">true</item>
		<!-- Dialog进入及退出动画 -->
		<item name="android:windowAnimationStyle">@style/AccessPermissionDialogDialogAnimation</item>

	</style>

	<style name="AccessPermissionDialogDialogAnimation" parent="@android:style/Animation.Dialog">
		<item name="android:windowEnterAnimation">@anim/alpha_out</item>
		<item name="android:windowExitAnimation">@anim/alpha_in</item>
	</style>

	<style name="OkDialog" parent="@android:style/Theme.Dialog">
		<!-- 背景透明 -->
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowContentOverlay">@null</item>
		<!-- 浮于Activity之上 -->
		<item name="android:windowIsFloating">true</item>
		<!-- 边框 -->
		<item name="android:windowFrame">@null</item>
		<!-- Dialog以外的区域模糊效果 -->
		<item name="android:backgroundDimEnabled">true</item>
		<!-- 无标题 -->
		<item name="android:windowNoTitle">true</item>
		<!-- 半透明 -->
		<item name="android:windowIsTranslucent">true</item>
		<!-- Dialog进入及退出动画 -->
		<item name="android:windowAnimationStyle">@style/OkDialogAnimation</item>
	</style>
	<!-- ActionSheet进出动画 -->
	<style name="OkDialogAnimation" parent="@android:style/Animation.Dialog">
		<item name="android:windowEnterAnimation">@anim/alpha_out</item>
		<item name="android:windowExitAnimation">@anim/alpha_in</item>
	</style>


	<style parent="@android:style/Widget.CompoundButton.CheckBox" name="CustomCheckboxTheme">
		<item name="android:button">@drawable/shape_direct</item>
	</style>




</resources>
